      <!-- ko if: $root.hasPermission('updates', 'read') -->
      li(data-theme=theme.menuSwatch)
        a(href='#updates', data-transition="slidefade")=__('Updates')
      <!-- /ko --> 
      li#import-ca-cert(data-theme=theme.menuSwatch)
